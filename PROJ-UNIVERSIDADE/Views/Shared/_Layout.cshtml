@{
    var currentPath = Context.Request.Path.ToString().ToLower();
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UNIVERSIDADE</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/css/global-querie.css" rel="stylesheet" />
    <link href="~/css/global-style.css" rel="stylesheet" />
    <link href="~/css/layout.css" rel="stylesheet" />
</head>
<body>
    <nav class="nav-container">
        <div class="nav-each">
            <div class="nav-button">
                <i class="fa-solid fa-arrow-right-long"></i>
            </div>
            <h1>UNIVERSIDADE</h1>
        </div>
        <div class="nav-each">
            <div class="nav-each-text">
                <p>Funcionário</p>
            </div>
            <div class="nav-each-img">
                <img src="~/img/user.png" alt="Alternate Text" />
            </div>
        </div>
    </nav>
    <main class="main-container">
        <div class="sidebar-content">
            <div class="side-each @(currentPath == "/" ? "active" : "")">
                <a href="/" class="side-each-title">
                    <p>Dashboard</p>
                </a>
            </div>
            <div class="side-each @(currentPath == "/candidatura" ? "active" : "")">
                <a asp-controller="candidatura" asp-action="index" class="side-each-title">
                    <p>Candidatura</p>
                </a>
            </div>
            <div class="side-each @(currentPath.StartsWith("/inscricao") ? "active" : "")">
                <div class="side-each-title">
                    <p>Inscrição</p>
                </div>
                <div class="side-each-child">
                    <a asp-controller="inscricao" asp-action="index" title="Inscrição de estudante" class="@(currentPath == "/inscricao" ? "active" : "")">
                        <p>Inscrever estudante</p>
                    </a>
                    <a asp-controller ="inscricao" asp-action="lista" title="Lista de estudantes inscritos" class="@(currentPath == "/inscricao/lista" ? "active" : "")">
                        <p>Lista de estudantes inscritos</p>
                    </a>
                </div>
            </div>
            <div class="side-each @(currentPath.StartsWith("/matricula") ? "active" : "")">
                <div class="side-each-title">
                    <p>Matricula</p>
                </div>
                <div class="side-each-child">
                    <a asp-controller="matricula" asp-action="index" title="Matricular estudante" class="@(currentPath == "/matricula" ? "active" : "")">
                        <p>Matricular estudante</p>
                    </a>
                    <a title="Lista de estudantes matriculados" href="/matricula/lista" class="@(currentPath == "/matricula/lista" ? "active" : "")">
                        <p>Lista de estudantes matriculados</p>
                    </a>
                </div>
            </div>
            <div class="side-each @(currentPath.StartsWith("/financas") ? "active" : "")">
                <div class="side-each-title">
                    <p>Finanças</p>
                </div>
                <div class="side-each-child">
                    <a asp-controller="financas" asp-action="pagamento" title="Pagamento de pré inscrição" class="@(currentPath == "/financas/pagamento" ? "active" : "")">
                        <p>Pagamento</p>
                    </a>
                </div>
            </div>
        </div>
        <div class="main-content">
            @RenderBody()
        </div>
    </main>

    <script src="~/js/layout.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>